$(document).ready(function() {

$('#img_manager').click(function(){
 $('#div_shop_info').css('width','50%').css('height','50%');
 $('#textAreaShopInfo').attr('rows', '7');
 $('#textAreaShopInfo').css('width', '90%');
 $('#div_shop_info').show(500);
})

$('#img_manager').mouseover(function(){
  $('#divVopros').show();
});

$('#img_manager').mouseout(function(){
  $('#divVopros').hide();
});

$('#close_ShopInfo_img').mouseover(function(){
  $('#close_ShopInfo_img').css('width','25px');
});

$('#close_ShopInfo_img').mouseout(function(){
  $('#close_ShopInfo_img').css('width','20px');
});


$('#imgVopros').click(function(){
 $('#div_shop_info').css('width','50%').css('height','50%');
 $('#textAreaShopInfo').attr('rows', '7');
 $('#textAreaShopInfo').css('width', '90%');
 $('#div_shop_info').show(500);
})

$('#close_ShopInfo_img').click(function(){
 $('#div_shop_info').hide(1000);
 $('#div_shop_info').css('width','0px').css('height','0px');
 $('#textAreaShopInfo').attr('rows', '0');
 $('#textAreaShopInfo').css('width', '0%');
})

$('#div_shop_info').click(function(){
// $('#div_shop_info').hide(1000);
// $('#div_shop_info').css('width','0px').css('height','0px');
// $('#textAreaShopInfo').attr('rows', '0');
// $('#textAreaShopInfo').css('width', '0%');
})


}); // End ready
